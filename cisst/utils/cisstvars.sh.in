CISST_DIR="@cisst_BINARY_DIR@"
CISST_BUILD_TESTS=@CISST_BUILD_TESTS@
CISST_BUILD_EXAMPLES=@CISST_BUILD_EXAMPLES@
CISST_BUILD_UTILITIES=@CISST_BUILD_UTILITIES@
CISST_BUILD_COMPONENTS=@CISST_BUILD_COMPONENTS@

OS=`uname`

PATH="${CISST_DIR}/cisst/bin:${PATH}"

# Path to dynamic libraries
if [ "${OS}" == "Darwin" ]
then
    if [ -z "${DYLD_LIBRARY_PATH}" ]
    then
        LIBRARY_PATH="${CISST_DIR}/cisst/lib"
    else
        LIBRARY_PATH="${CISST_DIR}/cisst/lib:${DYLD_LIBRARY_PATH}"
    fi
else
    if [ -z "${LD_LIBRARY_PATH}" ]
    then
        LIBRARY_PATH="${CISST_DIR}/cisst/lib"
    else
        LIBRARY_PATH="${CISST_DIR}/cisst/lib:${LD_LIBRARY_PATH}"
    fi
fi

# Path to Python extensions
if [ -z "${PYTHONPATH}" ]
then
    PYTHONPATH="${CISST_DIR}/cisst/lib"
else
    PYTHONPATH="${CISST_DIR}/cisst/lib:${PYTHONPATH}"
fi



# Add path to test code
if [ "${CISST_BUILD_TESTS}" == "ON" ]
then
    PATH="${CISST_DIR}/tests/bin:${PATH}"
    LIBRARY_PATH="${CISST_DIR}/tests/lib:${LIBRARY_PATH}"
    PYTHONPATH="${CISST_DIR}/tests/lib:${PYTHONPATH}"
fi


# Add path to example code
if [ "${CISST_BUILD_EXAMPLES}" == "ON" ]
then
    PATH="${CISST_DIR}/examples/bin:${PATH}"
    LIBRARY_PATH="${CISST_DIR}/examples/lib:${LIBRARY_PATH}"
    PYTHONPATH="${CISST_DIR}/examples/lib:${PYTHONPATH}"
fi


# Add path to utility code
if [ "${CISST_BUILD_UTILITIES}" == "ON" ]
then
    PATH="${CISST_DIR}/utilities/bin:${PATH}"
    LIBRARY_PATH="${CISST_DIR}/utilities/lib:${LIBRARY_PATH}"
    PYTHONPATH="${CISST_DIR}/utilities/lib:${PYTHONPATH}"
fi

# Add path to components code
if [ "${CISST_BUILD_COMPONENTS}" == "ON" ]
then
    PATH="${CISST_DIR}/components/bin:${PATH}"
    LIBRARY_PATH="${CISST_DIR}/components/lib:${LIBRARY_PATH}"
    PYTHONPATH="${CISST_DIR}/components/lib:${PYTHONPATH}"
fi


# Export all
export PATH

if [ "${OS}" == "Darwin" ]
then
    DYLD_LIBRARY_PATH=${LIBRARY_PATH}
    export DYLD_LIBRARY_PATH
else
    LD_LIBRARY_PATH=${LIBRARY_PATH}
    export LD_LIBRARY_PATH
fi

export PYTHONPATH

