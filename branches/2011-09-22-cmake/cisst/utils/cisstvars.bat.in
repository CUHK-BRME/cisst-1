@set CISST_DIR=${cisst_BINARY_DIR_NATIVE}
@set CMAKE_GENERATOR=${CMAKE_GENERATOR}
@set CISST_BUILD_TESTS=${CISST_BUILD_TESTS}
@set CISST_BUILD_EXAMPLES=${CISST_BUILD_EXAMPLES}
@set CISST_BUILD_UTILITIES=${CISST_BUILD_UTILITIES}
@set CISST_BUILD_COMPONENTS=${CISST_BUILD_COMPONENTS}

@if "%CMAKE_GENERATOR%" == "NMake Makefiles" goto nmake
@goto visual


:visual
@if (%1) == () goto usage
@set CISST_INTDIR=%1
@goto setpath


:nmake
@set CISST_INTDIR=
@goto setpath


:setpath
@echo Setting environment variables for the cisst package

@set CISST_PATH=%CISST_DIR%\bin\%CISST_INTDIR%;%CISST_DIR%\cisst\lib\%CISST_INTDIR%
@set CISST_PYTHONPATH=%CISST_DIR%\cisst\lib;%CISST_DIR%\cisst\lib\%CISST_INTDIR%

@if "%CISST_BUILD_TESTS%" == "ON" set CISST_PATH=%CISST_DIR%\tests\bin\%CISST_INTDIR%;%CISST_DIR%\tests\lib\%CISST_INTDIR%;%CISST_PATH%
@if "%CISST_BUILD_TESTS%" == "ON" set CISST_PYTHONPATH=%CISST_DIR%\tests\lib\%CISST_INTDIR%;%CISST_DIR%\tests\lib;%CISST_PYTHONPATH%

@if "%CISST_BUILD_EXAMPLES%" == "ON" set CISST_PATH=%CISST_DIR%\examples\bin\%CISST_INTDIR%;%CISST_DIR%\examples\lib\%CISST_INTDIR%;%CISST_PATH%
@if "%CISST_BUILD_EXAMPLES%" == "ON" set CISST_PYTHONPATH=%CISST_DIR%\examples\lib\%CISST_INTDIR%;%CISST_DIR%\examples\lib;%CISST_PYTHONPATH%

@if "%CISST_BUILD_UTILITIES%" == "ON" set CISST_PATH=%CISST_DIR%\utilities\bin\%CISST_INTDIR%;%CISST_DIR%\utilities\lib\%CISST_INTDIR%;%CISST_PATH%
@if "%CISST_BUILD_UTILITIES%" == "ON" set CISST_PYTHONPATH=%CISST_DIR%\utilities\lib\%CISST_INTDIR%;%CISST_DIR%\utilities\lib;%CISST_PYTHONPATH%

@if "%CISST_BUILD_COMPONENTS%" == "ON" set CISST_PATH=%CISST_DIR%\components\bin\%CISST_INTDIR%;%CISST_DIR%\components\lib\%CISST_INTDIR%;%CISST_PATH%
@if "%CISST_BUILD_COMPONENTS%" == "ON" set CISST_PYTHONPATH=%CISST_DIR%\components\lib\%CISST_INTDIR%;%CISST_DIR%\components\lib;%CISST_PYTHONPATH%
@if "%CISST_BUILD_COMPONENTS%" == "ON" set CISST_CLASSPATH=%CISST_DIR%\components\lib\%CISST_INTDIR%;%CISST_DIR%\components\lib;%CISST_CLASSPATH%

@set PATH=%CISST_PATH%;%PATH%
@set PYTHONPATH=%CISST_PYTHONPATH%;%PYTHONPATH%
@set CLASSPATH=%CISST_CLASSPATH%;%CLASSPATH%

@goto end


:usage
@echo "Usage: %0 ${CMAKE_CONFIGURATION_TYPES}"
@goto end

:end

