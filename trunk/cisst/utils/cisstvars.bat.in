@set CISST_DIR=${cisst_saw_BINARY_DIR_NATIVE}
@set CMAKE_GENERATOR=${CMAKE_GENERATOR}
@set CISST_BUILD_SAW=${CISST_BUILD_SAW}

@if "%CMAKE_GENERATOR%" == "NMake Makefiles" goto nmake
@goto visual


:visual
@if (%1) == () goto usage
@set CISST_INTDIR=%1
@goto setpath


:nmake
@set CISST_INTDIR=
@goto setpath


:setpath
@echo Setting environment variables for the cisst package

@set CISST_PATH=%CISST_DIR%\cisst\bin\%CISST_INTDIR%;%CISST_DIR%\cisst\lib\%CISST_INTDIR%
@set CISST_PYTHONPATH=%CISST_DIR%\cisst\lib;%CISST_DIR%\cisst\lib\%CISST_INTDIR%

@if "%CISST_BUILD_SAW%" == "ON" set CISST_PATH=%CISST_DIR%\saw\bin\%CISST_INTDIR%;%CISST_DIR%\saw\lib\%CISST_INTDIR%;%CISST_PATH%
@if "%CISST_BUILD_SAW%" == "ON" set CISST_PYTHONPATH=%CISST_DIR%\saw\lib\%CISST_INTDIR%;%CISST_DIR%\saw\lib;%CISST_PYTHONPATH%
@if "%CISST_BUILD_SAW%" == "ON" set CISST_CLASSPATH=%CISST_DIR%\saw\lib\%CISST_INTDIR%;%CISST_DIR%\saw\lib;%CISST_CLASSPATH%

@set PATH=%CISST_PATH%;%PATH%
@set PYTHONPATH=%CISST_PYTHONPATH%;%PYTHONPATH%
@set CLASSPATH=%CISST_CLASSPATH%;%CLASSPATH%

@goto end


:usage
@echo "Usage: %0 ${CMAKE_CONFIGURATION_TYPES}"
@goto end

:end

